# Database Configuration
DATABASE_URL="mysql://User:pw@127.0.0.1:3306/DBNAME"

# Authentication
JWT_SECRET="your-very-secure-jwt-secret-here"

# Server Configuration
PORT=3000

# Database Connection Pool Settings (Production)
# Max Anzahl gleichzeitiger DB-Verbindungen pro Prisma-Client
DB_CONNECTION_LIMIT=50

# Timeout f√ºr neue DB-Verbindungen in Millisekunden
DB_POOL_TIMEOUT=10000

# Idle Timeout - wie lange Verbindungen offen bleiben (ms)
DB_IDLE_TIMEOUT=300000

# Optional: Node.js Environment
NODE_ENV=development